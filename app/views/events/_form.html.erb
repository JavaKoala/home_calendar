<%= simple_form_for @event, remote: true do |f| %>
  <div class="form-inputs">
    <%= f.input :title %>
    <% if @event.start.nil? and @event.end.nil? %>
      <%= f.input_field :start, as: :hidden, value: Date.today, class: 'form-control input-sm start_hidden' %>
      <%= f.input_field :end, as: :hidden, value: Date.today, class: 'form-control input-sm end_hidden' %>
    <% else %>
      <%= f.input :start, as: :datetime, html5: true %>
      <%= f.input :end, as: :datetime, html5: true %>
    <% end %>
    <%= f.input :color, as: :select, collection: [['Black','black'], 
                                                  ['Green','green'], 
                                                  ['Red','red'], 
                                                  ['Midnight Blue', 'midnightblue'],
                                                  ['Indigo', 'indigo'],
                                                  ['Dark Orange', 'darkorange'],
                                                  ['Sienna', 'sienna'],
                                                  ['Teal', 'teal']], 
                        html5: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
    <%= link_to 'Delete', 
                event, 
                method: :delete, 
                class: 'btn btn-danger', 
                data: { confirm: 'Are you sure?' }, 
                remote: true unless @event.new_record? %>
  </div>
<% end %>